  </header>

  <!--mainコンテンツ-->
  <main class="container mg">

    <div class="row reset-mg">
      <div class="main-content">
        <% for (var item of list) { %>
          <div class="article-list">
            <a href="/posts<%= item.url %>">
              <h2 class="article-list-title">
                <%= item.title %>
              </h2>
              <img class="article-list-img" src="/public<%= item.image %>" alt="">
              <p class="article-list-text">
                <%= item.subcontent %>
              </p>
              <p class="article-list-date">
                <%= item.updated %>
              </p>
            </a>
          </div>
          <% } %>

            <%- include("./search.pagenation.ejs") %>
      </div>

      <%- include("../_share/side.ejs") %>


