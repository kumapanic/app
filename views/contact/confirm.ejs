<!DOCTYPE html>
<html lang="ja">

<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>contact</title>
  <%- include("../_share/stylesheet.ejs") %>
</head>

<body>

  <%- include("../_share/header.ejs") %>
    <!--mainコンテンツ-->
    <main class="container mg">

      <div class="row reset-mg">
        <div class="main-content" itemscope="https://schema.org/Article">
          <section class="contact-main" itemprop="articleBody">
            <h1>お問い合わせ</h1>
            <form>
              <!--初回アクセス時にlocals.originalやlocals.errorsは存在しない-->
              <div class="form-group">
                <label for="name">お名前</label>
                <input class="form-control" id="name" name="name" type="text" value="<%= original.name %>">
              </div>
              <div class="form-group">
                <label for="email">メールアドレス</label>
                <input class="form-control" type="email" name="email" id="email" value="<%= original.email %>">
              </div>
              <div class="form-group">
                <label for="title">題名</label>
                <input class="form-control" type="text" name="title" id="title" value="<%= original.title %>">
              </div>
              <div class="form-group">
                <label for="content">メッセージ本文</label>
                <textarea class="form-control contact-textarea" name="content" id="content" rows="10"
                  aria-invalid="false"><%= original.content %></textarea>
              </div>
              <div class="form-group row">
                <input class="btn" type="submit" value="登録" data-method="POST" data-action="/contact/execute">
                <input class="btn" type="submit" value="戻る" data-method="POST" data-action="/contact/input">
              </div>
            </form>
            <%- include("../_share/sns.ejs") %>

          </section>
        </div>

        <%- include("../_share/side.ejs") %>

      </div>

    </main>

    <%- include("../_share/footer.ejs") %>
    <%- include("../_share/javascript.ejs") %>
      <script src="/public/javascripts/input/index.js"></script>
</body>

</html>