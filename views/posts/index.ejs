                <%= list[0].content2 %>
              </p>
              <h2 class="article-sub-title">
                <%= list[0].subtitle2 %>
              </h2>
              <p>
                <%= list[0].content3 %>
              </p>
              <h2 class="article-sub-title">
                <%= list[0].subtitle3 %>
              </h2>
              <p>
                <%= list[0].content4 %>
              </p>
              <h2 class="article-sub-title">
                <%= list[0].subtitle4 %>
              </h2>
              <p>
                <%= list[0].content5 %>
              </p>
              <h2 class="article-sub-title">
                <%= list[0].subtitle5 %>
              </h2>
              <p>
                <%= list[0].content6 %>
              </p>
              <%- include("../_share/sns.ejs") %>

            </div>

        </div>

        <%- include("../_share/side.ejs") %>

      </div>

    </main>

    <%- include("../_share/footer.ejs") %>

</body>

</html>