<!doctype html>
<html lang="ja">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
  <meta name="generator" content="Hugo 0.79.0">
  <title>記事一覧</title>

  <!-- Bootstrap core CSS -->
  <link href=https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

  <!-- Favicons -->
  <link rel="apple-touch-icon" href="/docs/5.0/assets/img/favicons/apple-touch-icon.png" sizes="180x180">
  <link rel="icon" href="/docs/5.0/assets/img/favicons/favicon-32x32.png" sizes="32x32" type="image/png">
  <link rel="icon" href="/docs/5.0/assets/img/favicons/favicon-16x16.png" sizes="16x16" type="image/png">
  <link rel="manifest" href="/docs/5.0/assets/img/favicons/manifest.json">
  <link rel="mask-icon" href="/docs/5.0/assets/img/favicons/safari-pinned-tab.svg" color="#7952b3">
  <link rel="icon" href="/docs/5.0/assets/img/favicons/favicon.ico">
  <meta name="theme-color" content="#7952b3">
  <!-- Custom styles for this template -->
  <%- include("../_share/stylesheet.ejs") %>
</head>

<body>

  <%- include("../_share/header.ejs") %>

    <div class="container-fluid">
      <div class="row">
        <%- include("../_share/nav.ejs") %>

          <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div
              class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
              <h1 class="h2">記事一覧</h1>
            </div>

            <div class="table-responsive">

              <table class="table table-light table-hover">
                <thead>
                  <tr>
                    <th>イメージ</th>
                    <th>タイトル</th>
                    <th>概要</th>
                    <th>作成日</th>
                    <th>削除/編集</th>
                  </tr>
                </thead>
                <tbody>
                  <% for (var item of list) { %>
                    <tr>
                      <td>
                        <img class="table-img" src="/public<%= item.image %>" alt="">
                      </td>
                      <td class="align-middle">
                        <%= item.title %>
                      </td>
                      <td class="align-middle">
                        <%= item.subcontent %>
                      </td>
                      <td class="align-middle">
                        <%= item.date %>
                      </td>
                      <td class="align-middle">
                        <button class="btn btn-danger me-2 delete">削除</button>
                        <div class="popup">
                          <div class="content">
                            <p>サンプルテキスト、サンプルテキスト、サンプルテキスト、サンプルテキスト</p>
                            <button class="btn btn-primary close">閉じる</button>
                            <button class="btn btn-danger">削除する</button>
                          </div>
                        </div>
                        <a class="btn btn-primary" href="/account/article<%= item.url %>">編集</a>
                      </td>
                    </tr>
                    <% } %>
                </tbody>
              </table>

              <%- include("./pagenation.ejs") %>

            </div>
          </main>
      </div>
    </div>

    <%- include("../_share/javascript.ejs") %>

    <script>
      window.addEventListener('pageshow', () => {
        if (window.performance.navigation.type == 2) location.reload();
      });

      $(".delete").on("click", function () {
        $(".popup")
          .addClass("show")
          .fadeIn();
        // return false;
      });

      $(".close").on("click", function () {
        $(".popup").fadeOut();
        // return false;
      });
    </script>

</body>

</html>